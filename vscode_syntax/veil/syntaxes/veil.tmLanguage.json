{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Veil",
	"scopeName": "source.veil",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#types" },
		{ "include": "#booleans" },
		{ "include": "#functions" },
		{ "include": "#numbers" },
		{ "include": "#strings" },
		{ "include": "#templateStrings" },
		{ "include": "#operators" },
		{ "include": "#variables" }
	],
	"repository": {
		"keywords": {
			"patterns": [
				{ "name": "keyword.control.veil", "match": "\\b(let|const|if|else)\\b" }
			]
		},
		"types": {
			"patterns": [
				{ "name": "storage.type.veil", "match": "\\b(int|string|bool)\\b" }
			]
		},
		"booleans": {
			"patterns": [
				{ "name": "constant.language.boolean.veil", "match": "\\b(true|false)\\b" }
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "entity.name.function.veil",
					"match": "\\b(print|printS|dump|appendToBody)\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{ "name": "constant.numeric.veil", "match": "\\b\\d+\\b" }
			]
		},
		"strings": {
			"patterns": [
				{ "name": "string.quoted.double.veil", "begin": "\"", "end": "\"" }
			]
		},
		"templateStrings": {
			"patterns": [
				{ "name": "string.quoted.template.veil", "begin": "`", "end": "`" }
			]
		},
		"operators": {
			"patterns": [
				{ "name": "keyword.operator.veil", "match": "(==|!=|>=|<=|>|<|=|\\+|\\-|\\*|\\/)" }
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.other.veil",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?=\\s*[:=])"
				}
			]
		}
	}
}
